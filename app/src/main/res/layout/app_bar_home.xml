            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/notification"
            android:id="@+id/profile_login"
            android:tint="@color/colorWhite"
            android:layout_marginRight="10dp"
            android:layout_gravity="end"
            />







