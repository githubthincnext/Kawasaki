            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Primary.PrimaryActivity"
            android:label="@string/title_activity_primary"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SearchActivity.SearchCity"
            android:label="@string/title_activity_search_city"
